# ==========================================
# FIREBASE CONFIGURATION (REQUIRED)
# ==========================================
# Get credentials from: https://console.firebase.google.com/
# Project Settings > Service Accounts > Generate New Private Key

FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"


# ==========================================
# EMAIL CONFIGURATION (REQUIRED)
# ==========================================
# Option: Resend (Recommended - FREE 100 emails/day)
# Sign up at: https://resend.com

EMAIL_SERVICE=resend
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=Food Reminder <noreply@yourdomain.com>


# ==========================================
# WHATSAPP CONFIGURATION (OPTIONAL)
# ==========================================
# Get credentials from: https://www.twilio.com/try-twilio
# Free $15 credit for testing

TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886


# ==========================================
# TELEGRAM CONFIGURATION (OPTIONAL)
# ==========================================
# Create bot with @BotFather on Telegram

TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxYZ


# ==========================================
# NOTIFICATION SCHEDULER
# ==========================================
# How many times per day to check and send notifications (1-4)
# 1 = 9am | 2 = 9am,6pm | 3 = 9am,2pm,7pm | 4 = 8am,12pm,4pm,8pm

NOTIFICATION_TIMES_PER_DAY=4

# OR use custom cron expression:
# NOTIFICATION_SCHEDULE=0 9,12,15,18 * * *

# Timezone (default: UTC)
# Examples: America/New_York, Europe/London, Asia/Kolkata
TIMEZONE=UTC


# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Your deployed frontend URL
APP_URL=https://your-app.vercel.app

# Server port
PORT=5000

# Node environment
NODE_ENV=production
